<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toolbarRl"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="@color/pinkOrange"
        tools:ignore="MissingConstraints">

        <ImageButton
            android:id="@+id/backBtn"
            android:layout_width="20dp"
            android:layout_height="25dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="25dp"
            android:background="@color/transpernet"
            android:src="@drawable/ic_back"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="DuplicateIds">


        </ImageButton>

        <ImageButton
            android:id="@+id/deleteBtn"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="20dp"
            android:background="@null"
            android:src="@drawable/delete_btn"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </ImageButton>

        <ImageButton
            android:id="@+id/editBtn"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="55dp"
            android:background="@color/transpernet"
            android:src="@drawable/ic_editprofile"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="DuplicateIds">


        </ImageButton>

        <TextView
            android:id="@+id/nametTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:text="Product details"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </TextView>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/productIconIv"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="75dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_cart"
        android:background="@drawable/for_activity_solid"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_oval="true">

    </ImageView>

    <LinearLayout
        android:id="@+id/lineral3"
        android:layout_width="wrap_content"
        android:layout_height="170dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf='@+id/productIconIv'
        tools:ignore="DuplicateIds,MissingConstraints">



        <TextView
            android:id="@+id/titleTv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Product name"
            android:textSize="20dp">

        </TextView>

        <TextView
            android:id="@+id/discriptionTv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="discription"
            android:textSize="20dp">

        </TextView>

        <TextView
            android:id="@+id/categoryTv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Category"
            android:textSize="20dp">

        </TextView>

        <TextView
            android:id="@+id/quantityTv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Quantity"
            android:textSize="20dp">

        </TextView>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/lineral1"
        android:layout_width="wrap_content"
        android:layout_height="170dp"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="@+id/lineral3"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toBottomOf='@+id/productIconIv'>



        <TextView
            android:id="@+id/titleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Product Title"
            android:textSize="20dp">

        </TextView>

        <TextView
            android:id="@+id/discriptionTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="discription"
            android:textSize="20dp">

        </TextView>

        <TextView
            android:id="@+id/categoryTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Category"
            android:textSize="20dp">

        </TextView>

        <TextView
            android:id="@+id/quantityTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Quantity"
            android:textSize="20dp">

        </TextView>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/lineral2"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/lineral1"
        tools:ignore="MissingConstraints">


        <TextView
            android:id="@+id/originalPriceTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/discountedPriceTv"
            android:text="$ 15"
            android:textSize="20dp">

        </TextView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lineral4"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/lineral1"
        app:layout_constraintStart_toEndOf="@+id/lineral2"
        android:layout_marginStart="5dp"
        tools:ignore="MissingConstraints">


        <TextView
            android:id="@+id/originalPriceTv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/discountedPriceTv"
            android:text="$ 15"
            android:textSize="20dp">

        </TextView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>